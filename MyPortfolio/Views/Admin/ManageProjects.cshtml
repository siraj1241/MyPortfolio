@model IEnumerable<MyPortfolio.Models.Project>
@{
    ViewData["Title"] = "Manage Projects";
}
<h2>Manage Projects</h2>
<a href="@Url.Action("CreateProject", "Admin")" class="btn btn-primary mb-3">Add New Project</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>GitHub Link</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td><a href="@project.GitHubLink" target="_blank">View</a></td>
                <td>
                    <a href="@Url.Action("EditProject", "Admin", new { id = project.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("DeleteProject", "Admin", new { id = project.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
